@{
    ViewData["Title"] = "WebApp";
}

<style>
    html {
        height: 100%;
    }

    body {
        height: 100%;
        min-width: 600px;
    }

    #s-wrapper {
        height: 100%;
    }

    #s-content {
        height: calc(100% - 40px);
        padding: 5px 8px;
    }

    .s-3col-container {
        height: 100%;
        width: 100%;
        display: flex;
        flex-wrap: nowrap;
    }

    .s-3col {
        height: 100%;
        border: 1px solid #aaa;
    }

        .s-3col.s-3col-1, .s-3col.s-3col-2 {
            width: 230px;
            flex-shrink: 0;
        }

        .s-3col.s-3col-3 {
            width: calc(100% - 460px)
        }

        .s-3col.s-3col-2, .s-3col.s-3col-3 {
            border-left-width: 0;
        }
</style>
<div class="s-3col-container">

    <div class="s-3col s-3col-1">
        <div class="s-3col-hdr-wrapper" style="background-color: #999;padding:0 3px;">
            <div style="height:40px;line-height:40px;white-space:nowrap;overflow-x:hidden;">Header 1</div>
        </div>
    </div>
    <div class="s-3col s-3col-2">
        <div class="s-3col-hdr-wrapper" style="background-color: #999;padding:0 3px;">
            <div style="height:40px;line-height:40px;white-space:nowrap;overflow-x:hidden;">
                <label>Plan name:</label>&nbsp;<input type="text" style="width:100px;" />
                <button style="width:25px;">Refresh</button>
            </div>
        </div>
    </div>
    <div class="s-3col s-3col-3">
        <div class="s-3col-hdr-wrapper" style="background-color: #999;padding:0 3px;">
            <div style="height:40px;line-height:40px;white-space:nowrap;overflow-x:hidden;"><label>Plan name:</label>&nbsp;<input type="text" /></div>
        </div>
    </div>


</div>